# Backend Environment Variables for Loan Eligibility AI System
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ======================
# CORE SERVER CONFIG
# ======================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
PORT=8000

# ======================
# DATABASE - SUPABASE
# ======================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ======================
# JWT AUTHENTICATION
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Default manager account (for testing only - CHANGE IN PRODUCTION)
DEFAULT_MANAGER_EMAIL=admin@loanbank.com
DEFAULT_MANAGER_PASSWORD=admin123
DEFAULT_MANAGER_NAME=Admin Manager

# ======================
# AWS CREDENTIALS
# ======================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ======================
# AWS BEDROCK (Conversational AI)
# ======================
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-v2

# ======================
# AWS TEXTRACT (Document OCR)
# ======================
TEXTRACT_REGION=us-east-1

# ======================
# AWS SAGEMAKER (ML Model)
# ======================
SAGEMAKER_REGION=us-east-1
SAGEMAKER_ENDPOINT_NAME=loan-eligibility-endpoint
USE_LOCAL_ML_MODEL=True
ML_MODEL_PATH=./loan_model.pkl

# ======================
# AWS S3 (Document Storage)
# ======================
S3_REGION=us-east-1
S3_BUCKET_NAME=loan-documents-bucket
S3_UPLOAD_EXPIRATION=3600

# ======================
# AWS CONNECT (Voice Integration)
# ======================
CONNECT_INSTANCE_ID=your-connect-instance-id
CONNECT_COUNTRY_CODE=+1

# ======================
# AWS SNS (Notifications)
# ======================
SNS_REGION=us-east-1
SNS_TOPIC_ARN_SMS=arn:aws:sns:region:account:loan-sms-topic
ENABLE_SMS_NOTIFICATIONS=False

# ======================
# FEATURE FLAGS
# ======================
USE_MOCK_BEDROCK=True
USE_MOCK_TEXTRACT=True
USE_MOCK_SAGEMAKER=True
USE_MOCK_S3=True

# ======================
# CORS CONFIGURATION
# ======================
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ======================
# SECURITY
# ======================
ALLOWED_UPLOAD_EXTENSIONS=pdf,jpg,jpeg,png
MAX_FILE_SIZE=10485760
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
